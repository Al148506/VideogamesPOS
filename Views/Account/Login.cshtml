@using VideogamesPOS.Models.ViewModels;
@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">🔐 Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                <input asp-for="Email" class="form-control rounded-pill px-4" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">🔒 Password</label>
                <input asp-for="Password" class="form-control rounded-pill px-4" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label">
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
            </div>

            <button type="submit" class="btn btn-dark w-100 rounded-pill py-2">
                Login
            </button>

            <p class="text-center mt-3 text-white">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register" class="text-white fw-bold text-decoration-underline">Register</a>
            </p>
            <p class="text-center mt-3 text-white">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-white small text-decoration-none">Forgot password?</a>
            </p>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

}
